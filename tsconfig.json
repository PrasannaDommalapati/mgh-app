{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom"
    ],
    "noImplicitAny": true,
    "allowJs": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "files": [
    "typings/index.d.ts"
  ],
  "types": [
    "hammerjs"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "e2e",
    "src/**/*.d.ts"
  ]
}