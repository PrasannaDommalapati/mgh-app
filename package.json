{
    "name": "hotels-app",
    "version": "1.0.1",
    "scripts": {
        "start": "webpack-dev-server --inline --progress --port 8080",
        "test": "karma start",
        "test-local": "npm prune && npm install && npm run build && mkdir -p build/unit && npm test",
        "e2e-local": "npm run e2e-start && npm run e2e-build && npm run e2e-run && npm run e2e-stop",
        "build": "rimraf dist && typings install && webpack --config config/webpack.production.js --progress --profile --bail",
        "build-e2e": "rimraf dist && typings install && webpack --config config/webpack.e2e.js        --progress --profile --bail",
        "build-staging": "rimraf dist && typings install && webpack --config config/webpack.staging.js    --progress --profile --bail",
        "build-docker": "docker build -tags latest headforwardsspd/node-cd . && docker push headforwardsspd/node-cd",
        "add-shrinkwrap": "npm shrinkwrap -dev && git add npm-shrinkwrap.json",
        "e2e-start": "node config/e2e/start.js",
        "e2e-stop": "node config/e2e/stop.js",
        "e2e-run": "node config/e2e/run.js",
        "e2e-run-wip": "node config/e2e/run-wip.js",
        "e2e-build": "npm run e2e-build-app && npm run e2e-build-protractor",
        "e2e-build-app": "node config/e2e/build-app.js",
        "e2e-build-protractor": "node config/e2e/build-protractor.js"
    },
    "pre-commit": [
        "add-shrinkwrap"
    ],
    "devDependencies": {
        "@angular/animations": "*",
        "@angular/cdk": "2.0.0-beta.12",
