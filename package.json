        "@angular/platform-browser-dynamic": "*",
        "@angular/router": "*",
        "@types/faker": "^4.1.2",
        "@types/jasmine": "2.5.41",
        "@types/moment-timezone": "^0.2.34",
        "@types/node": "^6.0.45",
        "@types/quill": "0.0.31",
        "angular-2-local-storage": "^1.0.1",
        "angular2-csv": "^0.2.5",
